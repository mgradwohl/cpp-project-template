			],
			"windows": {
				"args": [
					"--preset",
					"win-debug"
				]
			},
			"group": "build",
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"reveal": "silent",
				"panel": "shared",
				"clear": true
			}
